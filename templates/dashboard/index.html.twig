{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <h1>Hello {{ user.email }}!</h1>

    <p class="mt-3">
        <a href="{{ path('app_code_new') }}" class="rounded-md bg-green-600 p-2 font-medium text-white shadow-sm transition-colors hover:bg-green-800">
            Ajouter un code promo
        </a>
    </p>

    <h1>Vos codes promo</h1>
    <div class="overflow-x-auto my-4">
        <table class="min-w-full divide-y-2 divide-gray-200">
            <thead class="ltr:text-left rtl:text-right">
            <tr class="*:font-medium *:text-gray-900">
                <th class="px-3 py-2 whitespace-nowrap">Code</th>
                <th class="px-3 py-2 whitespace-nowrap">Réduction (%)</th>
                <th class="px-3 py-2 whitespace-nowrap">Nom de domaine</th>
                <th class="px-3 py-2 whitespace-nowrap">Valide à partir de</th>
                <th class="px-3 py-2 whitespace-nowrap">Valide jusqu'à</th>
                <th class="px-3 py-2 whitespace-nowrap">Statut</th>
                <th class="px-3 py-2 whitespace-nowrap">Action</th>
            </tr>
            </thead>

            {% set today = "now"|date("U") %}
            <tbody class="divide-y divide-gray-200">
            {% for code in codes %}
                <tr class="text-center *:text-gray-900 *:first:font-medium {{ promo_state_classes(code) }}">
                    <td class="px-3 py-2 whitespace-nowrap">
                        {{ code.name }}
                        {% if code.isVipOnly %}
                            <span class="ml-1 inline-block px-2 py-0.5 text-xs font-semibold text-white bg-yellow-500 rounded">
                                VIP
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-3 py-2 whitespace-nowrap">{{ code.discount }}</td>
                    <td class="px-3 py-2 whitespace-nowrap">{{ code.domainName }}</td>
                    <td class="px-3 py-2 whitespace-nowrap">{{ code.validFrom|date('d-m-Y') }}</td>
                    <td class="px-3 py-2 whitespace-nowrap">{{ code.validUntil|date('d-m-Y') }}</td>
                    <td class="px-3 py-2 whitespace-nowrap">
                        <span class="text-xs font-semibold {{ promo_state_label_classes(code) }} rounded px-2 py-1">{{ promo_state_label(code) }}</span>
                    </td>
                    <td class="px-3 py-2 whitespace-nowrap flex justify-center gap-2 p-2">
                        <a href="{{ path('app_code_edit', {'id': code.id}) }}" class="rounded-md bg-teal-600 p-1 font-medium text-white shadow-sm transition-colors hover:bg-teal-800">Modifier</a>
                        {% include 'code/_delete_form.html.twig' with {
                            'isExpired': code.validUntil < today,
                            'codesLength': codes|length
                        } %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td>Aucun code promo</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
