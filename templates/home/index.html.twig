{% extends 'base.html.twig' %}

{% block title %}PromoManager - Liste des codes promo{% endblock %}

{% block body %}
    <section class="px-4 sm:px-6 lg:px-8 py-10 max-w-7xl mx-auto space-y-4">
        {% for code in codes %}
            <div class="block w-full rounded-lg border border-gray-200 bg-white shadow-sm hover:shadow-md transition p-4 sm:flex sm:items-center sm:justify-between">
                <div class="sm:flex sm:items-center sm:gap-4">
                    <div class="flex-shrink-0 flex items-center justify-center w-16 sm:w-20">
                    <span class="text-3xl sm:text-4xl font-extrabold text-blue-600 leading-tight text-center">
                        {{ code.discount }}%
                    </span>
                    </div>

                    <div class="sm:ml-4">
                        <p class="text-lg font-bold text-gray-900">
                            {{ code.name }}
                            {% if code.isVipOnly %}
                                <span class="ml-1 inline-block px-2 py-0.5 text-xs font-semibold text-white bg-yellow-500 rounded">
                                VIP
                            </span>
                            {% endif %}
                        </p>
                        <p class="text-sm text-gray-600">
                            {{ code.domainName }}
                        </p>
                    </div>

                    <div class="hidden sm:block sm:ml-auto sm:text-sm text-gray-500">
                        {{ code.validFrom|date('d/m/Y') }} â†’ {{ code.validUntil|date('d/m/Y') }}
                    </div>
                </div>

                <div class="mt-3 sm:mt-0 text-sm font-semibold {{ promo_state_label_classes(code) }} rounded px-2 py-1 inline-block sm:ml-4">
                    {{ promo_state_label(code) }}
                </div>
            </div>
        {% else %}
            <p class="text-center text-gray-500">Aucun code promo pour le moment.</p>
        {% endfor %}
    </section>
{% endblock %}
