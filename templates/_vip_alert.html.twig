{% if is_granted('ROLE_USER') and 'ROLE_VIP' not in app.user.roles %}
    {% set promoMessage = vip_promo_message(app.user) %}

    {% if promoMessage %}
        <div x-data="{ show: true }" x-show="show" x-transition
             id="vip-alert"
            class="relative mb-4 rounded-lg bg-yellow-100 p-4 text-yellow-800 border border-yellow-300 text-center transition-opacity duration-500 ease-in-out"
        >
            <button type="button"
                @click="show = false"
                class="absolute top-4 right-2 text-yellow-700 hover:text-yellow-900 leading-none focus:outline-none"
            >
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-5 w-5" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
            {{ promoMessage|raw }}
        </div>
    {% endif %}
{% endif %}
